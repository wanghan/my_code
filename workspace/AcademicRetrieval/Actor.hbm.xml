<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="dao.test">
	<class
		name="Actor"
		table="actor"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="java.lang.String"
			column="actor_id"
		>
			<generator class="sequence"/>
		</id>

		<property
			name="FirstName"
			column="first_name"
			type="string"
			not-null="true"
			length="45"
		/>
		<property
			name="LastName"
			column="last_name"
			type="string"
			not-null="true"
			length="45"
		/>
		<property
			name="LastUpdate"
			column="last_update"
			type="timestamp"
			not-null="true"
			length="19"
		/>
	
		<set
			name="Films"
			table="film_actor"
			cascade="all"
		>
			<key column="actor_id"/>
			<many-to-many column="film_id" class="Film"/>
		</set>


	</class>	
</hibernate-mapping>