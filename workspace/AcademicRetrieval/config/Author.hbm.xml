<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="actm.data">
	<class
		name="Author"
		table="author"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="java.lang.Long"
			column="id"
		>
			<generator class="assigned"/>
		</id>

		<property
			name="Name"
			column="name"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="Link"
			column="link"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="AcmIndex"
			column="acm_index"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="TmIndex"
			column="tm_index"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="Position"
			column="position"
			type="string"
			not-null="false"
		/>
		<property
			name="Affiliation"
			column="affiliation"
			type="string"
			not-null="false"
		/>
		<property
			name="Address"
			column="address"
			type="string"
			not-null="false"
		/>
		<property
			name="Homepage"
			column="homepage"
			type="string"
			not-null="false"
		/>
		<property
			name="Interest"
			column="interest"
			type="string"
			not-null="false"
		/>


	</class>	
</hibernate-mapping>